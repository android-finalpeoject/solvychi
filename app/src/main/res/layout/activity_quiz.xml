<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgquizz"
        tools:context=".QuizActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/backside"
            >
            <ImageView android:id="@+id/logout"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/logout"
                />


            <TextView
                android:id="@+id/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Edit profile"
                android:textColor="#C4FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/coordonne"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_below="@id/backside"
            >

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pdp2"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/Nom_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="emma"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/level_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Level 1"
                    android:layout_marginBottom="5dp"
                    android:textColor="#206670"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/level_stars"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="left"

                    android:layout_marginTop="-30dp"
                    android:src="@drawable/level0" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooselvl"
            android:layout_below="@+id/coordonne"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start the challenge"
                android:textColor="#D3FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"

                />

        </LinearLayout>


        <ListView
            android:id="@+id/levels"
            android:layout_width="wrap_content"
            android:layout_height="900dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
            android:divider="@null"
            android:focusable="true"
            android:layout_marginRight="10dp">

        </ListView>

    </RelativeLayout>
</ScrollView>